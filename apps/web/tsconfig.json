{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@skribble-play/shared-config": ["../../packages/shared-config/src"],
      "@skribble-play/drawing-engine": ["../../packages/drawing-engine/src"]
    },
    "jsx": "preserve",
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*",
    "vitest.config.ts",
    "next.config.mjs",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules"]
}
