{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@skribble/shared-config/*": ["packages/shared-config/src/*"],
      "@skribble/drawing-engine": ["packages/drawing-engine/src"],
      "@skribble/drawing-engine/*": ["packages/drawing-engine/src/*"],
      "@skribble/ui-kit/*": ["packages/ui-kit/src/*"]
    }
  },
  "include": [
    "apps",
    "services",
    "packages"
  ]
}
