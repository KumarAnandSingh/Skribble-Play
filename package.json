{
  "name": "skribble-play",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo for Skribble Play, a real-time multiplayer drawing and guessing experience.",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "dev": "npm run dev --workspace @skribble-play/web"
  },
  "engines": {
    "node": ">=18.18",
    "npm": ">=9"
  }
}
